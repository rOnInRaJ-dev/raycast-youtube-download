{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "youtube-audio-download",
  "title": "youtube audio download",
  "description": "Download Youtube files in audio formats (.wav)",
  "icon": "extension-icon.png",
  "author": "raj_nitin",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "download-youtube-audio",
      "title": "Download Youtube Audio",
      "subtitle": "Download Youtube Audio",
      "description": "Download Youtube Audio (.wav)",
      "mode": "view",
      "preferences": [
        {
          "name": "downloadPath",
          "type": "directory",
          "title": "Download Path",
          "description": "Path to save downloaded audio files",
          "default": "~/Downloads",
          "required": true
        },
        {
          "name": "brewPath",
          "type": "textfield",
          "title": "Homebrew Path",
          "description": "Path to the Homebrew executable",
          "default": "/opt/homebrew/bin/brew",
          "required": true
        },
        {
          "name": "ytDlpPath",
          "type": "textfield",
          "title": "yt-dlp Path",
          "description": "Path to the yt-dlp executable",
          "default": "/opt/homebrew/bin/yt-dlp",
          "required": true
        },
        {
          "name": "ffprobePath",
          "type": "textfield",
          "title": "yt-ffprobePath Path",
          "description": "Path to the ffprobePath executable",
          "default": "/opt/homebrew/bin/ffprobePath",
          "required": true
        },
        {
          "name": "ffmpegPath",
          "type": "textfield",
          "title": "ffmpegPath",
          "description": "Path to the ffmpeg executable",
          "default": "/opt/homebrew/bin/ffmpeg",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}